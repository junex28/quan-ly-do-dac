<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <!-- link to the CSS files for this menu type -->
    <link href="@Url.Content("~/Content/superfish.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <!-- link to the JavaScript files (hoverIntent is optional) -->
    <script src="@Url.Content("~/Scripts/DropDownMenu/hoverIntent.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DropDownMenu/superfish.js")" type="text/javascript"></script>

    <!-- initialise Superfish -->
    <script type="text/javascript">
        $(document).ready(function () {
            $("a.side-link").button();
            $("ul.sf-menu").superfish();
        });
    </script>

    @RenderSection("HeadScript", required: false)
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="header-top">
                <img id="logo" alt="Logo" src="@Url.Content("~/Content/images/logo.png")" />
                <div id="title">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div id="logindisplay">
                    @Html.Partial("_LogOnPartial")
                </div>
            </div>
            <div class="menucontainer">
                <ul class="sf-menu">
                    <li>@Html.ActionLink("Trang Chủ", "Index", "TrangChu")</li>
                    <li>@Html.ActionLink("WebGIS", "Index", "TrangChu")</li>
                    <li>
                        @Html.ActionLink("Đăng Ký Giấy Phép", "Index", "TrangChu")
                        <ul>
                            <li>@Html.ActionLink("Đăng Ký Giấy Phép Mới", "Index", "TrangChu")</li>
                            <li>@Html.ActionLink("Đăng Ký Gia Hạn", "Index", "TrangChu")</li>
                            <li>@Html.ActionLink("Đăng Ký Bổ Sung Hoạt Động", "Index", "TrangChu")</li>
                            <li>@Html.ActionLink("Bổ sung thông tin", "Index", "TrangChu")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Quản Lý", "Index", "TrangChu")</li>
                    <li>@Html.ActionLink("FAQ", "Index", "TrangChu")</li>
                    <li>@Html.ActionLink("Liên Hệ", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="middle">
            <div id="side-bar">
                <div>
                    <div>
                        <a class="side-link" href="#">An anchor</a>
                        <a class="side-link" href="#">An anchor</a>
                    </div>
                </div>
            </div>
            <div id="main">
                <div>
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div id="footer">
            &copy; 2011
        </div>
    </div>
</body>
</html>
